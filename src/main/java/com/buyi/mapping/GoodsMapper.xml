<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.buyi.dao.GoodsDao">
    <insert id="add" parameterType="com.buyi.entity.Goods">
        INSERT INTO `goods` (`name`, `trademark_id`, `category_id`, `store_id`)
        VALUES (#{name}, #{trademarkId}, #{categoryId}, #{storeId})
    </insert>

    <select id="queryById" parameterType="java.lang.Integer" resultType="com.buyi.entity.Goods">
        SELECT * FROM  `goods` WHERE `id` = #{id}
    </select>

    <select id="queryByForeignKey" parameterType="com.buyi.entity.Goods" resultType="com.buyi.entity.Goods">
        SELECT * FROM `goods`
        <where>
            <if test="storeId != null">
                `store_id` = #{storeId},
            </if>
            <if test="categoryId != null">
                `category_id` = #{categoryId},
            </if>
            <if test="trademarkId != null">
                `trademark_id` = #{trademarkId},
            </if>
        </where>
    </select>

    <update id="update" parameterType="com.buyi.entity.Goods">
        UPDATE `goods`
        <set>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="categoryId != null">
                `category_id` = #{categoryId},
            </if>
            <if test="trademarkId != null">
                `trademark_id` = #{trademarkId},
            </if>
        </set>
        WHERE `id` = #{id}
    </update>
</mapper>